<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_card"
        android:backgroundTint="@color/light_gray"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/langTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Язык"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:inputType="text"
            android:layout_margin="16dp"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/langET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/beige"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/beige"
            android:textSize="12sp"
            android:layout_marginStart="32dp"
            android:text="Уровень"/>

        <com.shuhart.stepview.StepView
            android:id="@+id/langLvl"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginHorizontal="16dp"
            app:sv_selectedCircleColor="@color/beige"
            app:sv_selectedTextColor="@color/beige"
            app:sv_stepLineWidth="2dp"
            app:sv_stepPadding="12dp"
            app:sv_stepsNumber="5"
            app:sv_nextTextColor="@color/gray"
            app:sv_nextStepLineColor="@color/gray"
            app:sv_doneCircleColor="@color/beige"
            app:sv_doneStepLineColor="@color/beige"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/black"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/beige"
            app:sv_stepNumberTextSize="14sp"
            app:sv_textSize="12sp"
            app:sv_animationType="Line"
            app:sv_typeface="@font/gotham"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/langDescTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Примечание"
            android:inputType="text"
            android:layout_margin="16dp"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/langDescET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textColor="@color/beige"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveLangBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_item_card"
            android:fontFamily="@font/gotham"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Добавить"
            android:textColor="@color/beige"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>