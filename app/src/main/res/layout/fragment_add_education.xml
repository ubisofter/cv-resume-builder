<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_card"
        android:backgroundTint="@color/light_gray"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/degreeTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Образование"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:inputType="text"
            android:layout_margin="16dp"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/degreeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/beige"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/universityTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Учебное заведение"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:inputType="text"
            android:layout_margin="16dp"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/universityET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/beige"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/educationCityTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Город"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:inputType="text"
            android:layout_margin="16dp"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/educationCityET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/beige"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/datesLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateBeginTF"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:expandedHintEnabled="false"
                android:hint="Дата начала"
                app:hintTextAppearance="@style/NavbarTextStyle"
                android:inputType="date"
                android:layout_margin="16dp"
                android:textColorHint="@color/beige"
                app:boxStrokeColor="@color/beige"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateBeginET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/beige"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateEndTF"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:expandedHintEnabled="false"
                android:hint="Дата завершения"
                android:inputType="date"
                android:layout_margin="16dp"
                app:hintTextAppearance="@style/NavbarTextStyle"
                android:textColorHint="@color/beige"
                app:boxStrokeColor="@color/beige"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateEndET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/beige"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Описание"
            android:inputType="text"
            android:layout_margin="16dp"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textColor="@color/beige"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveEducationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_item_card"
            android:fontFamily="@font/gotham"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Добавить"
            android:textColor="@color/beige"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>