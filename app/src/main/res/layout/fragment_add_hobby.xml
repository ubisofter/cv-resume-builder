<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_card"
        android:backgroundTint="@color/light_gray"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hobbyTF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:hint="Хобби"
            app:hintTextAppearance="@style/NavbarTextStyle"
            android:inputType="text"
            android:layout_margin="16dp"
            android:textColorHint="@color/beige"
            app:boxStrokeColor="@color/beige"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="3dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hobbyET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/beige"
                android:lines="4"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveHobbyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_item_card"
            android:fontFamily="@font/gotham"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Добавить"
            android:textColor="@color/beige"
            android:layout_gravity="center_horizontal"/>
        
    </LinearLayout>
    
</ScrollView>